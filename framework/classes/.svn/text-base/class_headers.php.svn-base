<?php		class headers {			private function htmlHeader() {				header("Content-type: text/html");			}			private function xmlHeader() {				header("Content-type: text/xml");			}						private function jsonHeader() {				header("Content-type: application/json");			}			private function redirectHeader($url) {				if (headers_sent()) {					echo '<script type="text/javascript">';			        echo 'window.location.href="'.$url.'";';			        echo '</script>';			        echo '<noscript>';			        echo '<meta http-equiv="refresh" content="0;url='.$url.'" />';			        echo '</noscript>';				} else {					header("Location: " . $url);				}			}			private function noCache() {				Header("Cache-Control: no-cache");				Header("Pragma: no-cache");			}			public function setHeader($type=PAGE_TYPE, $nocache=FALSE, $url="") {				switch( $type ) {			          case "redirect": headers::redirectHeader($url); break;			          case "html": headers::htmlHeader(); break;			          case "xml": headers::xmlHeader(); break;			          case "json": headers::jsonHeader(); break;				}				if ($nocache) headers::noCache();			}		}?>